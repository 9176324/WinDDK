        {
            *case: MANUAL
            {
                *EjectPageWithFF?: TRUE
            }
            *case: Option3
            {
                *EjectPageWithFF?: TRUE
            }
        }
    }
}
*Command: CmdSelectBlackColor { *Cmd : "<1B>r<00>" }
