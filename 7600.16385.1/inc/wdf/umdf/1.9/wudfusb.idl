//
// IWDFUsbTargetPipe2 interface
//

[
    uuid(8EFE1AB4-F4A2-42bb-9B2B-BBADA19D8B80),
    object,
    local,
    pointer_default(unique)
]
interface IWDFUsbTargetPipe2 : IWDFUsbTargetPipe
{
